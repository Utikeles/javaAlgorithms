public static boolean equalSum(ArrayList<Integer> arr)
{
    int totalSum = 0;
    for (int num : arr) {
        totalSum+=num;
    }
    
    if (totalSum % 2 != 0) {
        return false;
    }
    
    int targetSum = totalSum / 2;
    int currentSum = 0;
    
    for (int num : arr) {
        currentSum+=num;
        if (currentSum == targetSum) {
            return true;
        }
    }
    
    return false;
}